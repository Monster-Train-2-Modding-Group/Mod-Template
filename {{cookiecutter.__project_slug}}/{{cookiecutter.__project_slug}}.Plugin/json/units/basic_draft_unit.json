{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "BasicDraftUnit",
      "names": {
        "english": "Basic Draft Unit",
        "chinese": "示例卡包内单位"
      },
      "card_art": "@BasicDraftUnitCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@ClassBasic",
      "targets_room": true,
      "targetless": false,
      "pools": [ "MegaPool" ],
      "effects": [ "@SpawnBasicDraftUnit" ],
      "lore_tooltips": [
        {
          "english": "This is an example of a unit that can be gained from the Battle Reward Clan Pack Card Draft generated by the Mod Template.",
          "chinese": "示例剧情文本。"
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "BasicDraftUnitCharacter",
      "names": {
        "english": "Basic Draft Unit",
        "chinese": "示例卡包内单位"
      },
      "character_art": "@BasicDraftUnitCharacterArt",
      "size": 1,
      "health": 5,
      "attack_damage": 20,
      "subtypes": [ "@BasicSubtype" ]
    }
  ],
  "effects": [
    {
      "id": "SpawnBasicDraftUnit",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@BasicDraftUnitCharacter"
    }
  ],
  "game_objects": [
    {
      "id": "BasicDraftUnitCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@BasicDraftUnitCardSprite"
        }
      }
    },
    {
      "id": "BasicDraftUnitCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@BasicDraftUnitCharacterSprite",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.3,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ],
  "sprites": [
    {
      "id": "BasicDraftUnitCardSprite",
      "path": "textures/card_art/BasicDraftUnit.png"
    },
    {
      "id": "BasicDraftUnitCharacterSprite",
      "path": "textures/character_art/BasicDraftUnit.png"
    }
  ]
}

{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "BasicAbilityUnit",
      "names": {
        "english": "Basic Banner Unit"
      },
      "card_art": "@BasicAbilityUnitCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "rare",
      "class": "@ClassBasic",
      "targets_room": true,
      "targetless": false,
      "pools": [ "UnitsAllBanner", "@UnitsBasicClanBanner" ],
      "effects": [ "@SpawnBasicAbilityUnit" ],
      "lore_tooltips": [
        {
          "english": "This is an example banner unit with ability generated by the Mod Template."
        }
      ]
    },
    {
      "id": "BasicAbility",
      "names": {
        "english": "Basic Ability Name"
      },
      "descriptions": {
        "english": "Apply [meleeweakness] [effect0.status0.power] to enemy units."
      },
      "is_an_ability": true,
      "cooldown": 3,
      "targetless": true,
      "targets_room": false,
      "card_type": "spell",
      "effects": [ "@BasicAbilityApplyMeleeWeakness" ]
    }
  ],
  "characters": [
    {
      "id": "BasicAbilityUnitCharacter",
      "names": {
        "english": "Basic Ability Unit"
      },
      "character_art": "@BasicAbilityUnitCharacterArt",
      "size": 3,
      "health": 30,
      "attack_damage": 40,
      "ability": "@BasicAbility",
      "subtypes": [ "SubtypesData_BannerUnit", "@BasicSubtype" ]
    }
  ],
  "effects": [
    {
      "id": "SpawnBasicAbilityUnit",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@BasicAbilityUnitCharacter"
    },
    {
      "id": "BasicAbilityApplyMeleeWeakness",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "heroes",
      "param_status_effects": [
        {
          "status": "melee weakness",
          "count": 2
        }
      ]
    }
  ],
  "game_objects": [
    {
      "id": "BasicAbilityUnitCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@BasicAbilityUnitCardSprite"
        }
      }
    },
    {
      "id": "BasicAbilityUnitCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@BasicAbilityUnitCharacterSprite",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.3,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ],
  "sprites": [
    {
      "id": "BasicAbilityUnitCardSprite",
      "path": "textures/card_art/BasicAbilityUnit.png"
    },
    {
      "id": "BasicAbilityUnitCharacterSprite",
      "path": "textures/character_art/BasicAbilityUnit.png"
    }
  ]
}
